<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.spring.action.idol.part2.hibernate.entity.NewsEntity" table="News" schema="" catalog="hibernate">
        <id name="id">
            <generator class="increment"/>
        </id>
        <property name="title">
            <column name="title" sql-type="char" length="16"/>
        </property>
        <property name="content">
            <column name="content" sql-type="char" length="16"/>
        </property>
        <property name="fullContent">
            <column name="fullContent" sql-type="char" length="16"/>
        </property>
    </class>
</hibernate-mapping>