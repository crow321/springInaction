<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.spring.action.idol.part2.hibernate.entity.StudentsEntity" table="students" schema=""
           catalog="hibernate">
        <id name="id">
            <column name="id" sql-type="int" not-null="true"/>
        </id>
        <property name="name">
            <column name="name" sql-type="char" length="8" not-null="true"/>
        </property>
        <property name="age">
            <column name="age" sql-type="int" not-null="true"/>
        </property>
        <property name="sex">
            <column name="sex" sql-type="char" length="4" not-null="true"/>
        </property>
        <property name="addres">
            <column name="addres" sql-type="char" length="32" not-null="true"/>
        </property>
        <property name="telephone">
            <column name="telephone" sql-type="int" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>